<div class="container">
	<% if @book.errors.any? %>
	    <h3 class="error-message, text-danger"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
	    	<ul>
	    		<% @book.errors.full_messages.each do |message| %>
	    		<li class="text-danger"><%= message %></li>
	    		<% end %>
	    	</ul>
	<% end %>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-4"></div>
		<div class="col-lg-4">
			<h1>Editing Book</h1>
			<%= form_with model:@book, local:true do |f| %>
				<p>Title</p>
				<p><%= f.text_field :title %></p>
				<p>Opinion</p>
				<p><%= f.text_area :body %></p>
				<p><%= f.submit 'Update Book', class: "btn btn-success" %></p>
				<p><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %></p>
			<% end %>
		<div class="col-lg-4"></div>
	</div>
</div>