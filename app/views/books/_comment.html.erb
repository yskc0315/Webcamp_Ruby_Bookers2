<% comments.each do |comment| %>
  <tr>
    <td>
      <%= link_to user_path(comment.user_id) do %>
      	<%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpg", size: '40x40'  %>
      	<div><%= comment.user.name %></div>
      <% end %>
    </td>
    <td><%= comment.comment %></td>
    <% if comment.user.id == current_user.id %>
      <td><%= link_to 'Destroy', book_book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, "data-confirm"=>"本当に消しますか？", class: "btn btn-danger btn-sm" %></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
<% end %>