<div class="container">
	<% if @book.errors.any? %>
	    <h3 class="error-message, text-danger"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
	    	<ul>
	    		<% @book.errors.full_messages.each do |message| %>
	    		<li class="text-danger"><%= message %></li>
	    		<% end %>
	    	</ul>
	<% end %>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= render 'books/home', user: @user, booker: @booker %>
		</div>
		<div class="col-md-8 offset-md-1">
			<h1>Books</h1>
				<table class="table table-hover">
					<thead>
					<tr>
						<th scope="col"></th>
						<th scope="col">Title</th>
						<th scope="col">Opinion</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
					</thead>
					<tbody>
					<% @books.each do |book| %>
						<tr class="book_<%= book.id %>">
							<%= render 'books/books', book: book %>
						</tr>
					<% end %>
					</tbody>
				</table>
		</div>
	</div>
</div>