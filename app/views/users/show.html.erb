<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/home', user: @user, book: @book %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h1>Books</h1>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Title</th>
                    <th scope="col">Opinion</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr class="userBook_<%= book.id %>">
                            <%= render 'users/book', book: book, user: @user %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>