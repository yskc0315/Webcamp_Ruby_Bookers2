<h1>Follower Users</h1>

<% if @users.count == 0 %>
  <p>ユーザーはいません</p>
<% else %>
	<div class="row">
		<table class="table col-md-11 mx-auto">
			<thead>
			<tr>
				<th scope="col">image</th>
				<th scope="col">name</th>
				<th scope="col"></th>
				<th scope="col"></th>
				<th scope="col">Show</th>
			</tr>
			</thead>
			<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
				<td><%= user.name %></td>
				<td>フォロー数：<%= user.followers.count %></td>
				<td>フォロワー数：<%= user.followeds.count %></td>
				<td><%= link_to 'Show', user_path(user.id) %></td>
			</tr>
		<% end %>
			</tbody>
		</table>
	</div>
<% end %>